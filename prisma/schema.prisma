generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mention {
  id      String @id @default(cuid())
  Mention String
  Branche String
  Niveau  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  etudiant Student[]
  document Document[]
}

model Student {
  Matricule       Int      @id
  Nom             String
  Prenom          String
  contact         String
  MotDePasse      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  filePictureName String?

  MentionId String

  Classe  Mention   @relation(fields: [MentionId], references: [id], onDelete: Cascade)
  Tranche Tranche[]

  @@unique([Matricule, MentionId])
}

model Tranche {
  id               String   @id @default(cuid())
  Student          Student  @relation(fields: [studentMatricule], references: [Matricule], onDelete: Cascade)
  Premier          Boolean  @default(false)
  Deuxieme         Boolean  @default(false)
  Troisieme        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  studentMatricule Int
}

model Document {
  id         String @id @default(cuid())
  Nom        String
  Titre      String
  Professeur String
  MegaByte   Int

  Classe   Mention? @relation(fields: [classeId], references: [id])
  classeId String?
}
